<div class="row">
    {{#each spirits}}
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ brand }} <a href="/spirits/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{ maker }} </p>
                

                <!-- DELETE REQUEST -->
                <form action="/spirits/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hey {{user.name}}</h1>
            <p clsss="lead">Not Catalogs Yet.</p>
            <a href="/spirits/add" class="btn btn-success btn-block">Create One!</a>
        </div>
    </div>
    {{/each}}
</div>