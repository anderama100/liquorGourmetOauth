<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Catalog</h3>
        </div>
        <div class="card-body">
            <form action="/spirits/new-spirit" method="POST">
                <div class="form-group">
                    <input type="text" name="brand" class="form-control" placeholder="Brand" autofocus/>
                </div>
                <div class="form-group">
                    <input type="text" name="maker" class="form-control" placeholder="Maker">
                </div>
                <div class="form-group">
                    <input type="text" name="barcode" class="form-control" placeholder="Barcode">
                </div>                
                <div class="form-group">
                    <textarea type="text" name="content" class="form-control" placeholder="review"></textarea>
                </div>                

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
              Save Catalog
            </button>
                </div>
            </form>
        </div>
    </div>
</div>