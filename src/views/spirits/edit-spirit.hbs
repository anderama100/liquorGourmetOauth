{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Catalog</h3>
        </div>
        <div class="card-body">
            <form action="/spirits/edit-spirit/{{spirit._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="brand" class="form-control" value="{{spirit.brand}}" />
                </div>
                <div class="form-group">
                    <input type="text" name="maker" class="form-control" value="{{spirit.maker}}" />
                </div>

                <div class="form-group">
                    <input type="text" name="barcode" class="form-control" value="{{spirit.barcode}}" />
                </div>
                <div class="form-group">
                    <input type="text" name="content" class="form-control" value="{{review.content}}" />

                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
                </div>
            </form>
        </div>
    </div>
</div>